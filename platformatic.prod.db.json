{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "cors": {
      "origin": "https://platformatic.cloud",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}"
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "autoTimestamp": {
      "createdAt": "created_at",
      "updatedAt": "updated_at"
    },
    "openapi": true,
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "migrations": {
    "dir": "migrations"
  },
  "types": {
    "autogenerate": true
  },
  "dashboard": true,
  "metrics": true,
  "plugin": [
    {
      "path": "./dist/plugins/rate-limit.js",
      "options": {
        "max": 100,
        "timeWindow": "1 minute"
      }
    },
    {
      "path": "./dist/plugins/helmet.js"
    },
    {
      "path": "./dist/plugin.js",
      "options": {
        "hello": "world"
      }
    }
  ]
}
