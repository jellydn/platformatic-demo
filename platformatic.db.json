{
  "$schema": "https://platformatic.dev/schemas/v1.2.0/db",
  "server": {
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}"
  },
  "db": {
    "connectionString": "{DATABASE_URL}",
    "autoTimestamp": {
      "createdAt": "created_at",
      "updatedAt": "updated_at"
    },
    "openapi": true,
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "types": {
    "autogenerate": true
  },
  "metrics": true,
  "migrations": {
    "dir": "migrations"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins/rate-limit.ts",
        "options": {
          "max": 100,
          "timeWindow": "1 minute"
        },
        "typescript": {
          "outDir": "dist"
        }
      },
      {
        "path": "./plugins/helmet.ts",
        "typescript": {
          "outDir": "dist"
        }
      },
      {
        "path": "plugin.ts",
        "options": {
          "hello": "world"
        },
        "typescript": {
          "outDir": "dist"
        }
      }
    ],
    "typescript": true
  }
}
