{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}"
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "autoTimestamp": {
      "createdAt": "created_at",
      "updatedAt": "updated_at"
    },
    "openapi": true,
    "graphql": true,
    "ignore": {
      "versions": true
    }
  },
  "types": {
    "autogenerate": true
  },
  "dashboard": true,
  "metrics": true,
  "migrations": {
    "dir": "migrations"
  },
  "plugin": [
    {
      "path": "./plugins/rate-limit.ts",
      "options": {
        "max": 100,
        "timeWindow": "1 minute"
      },
      "typescript": {
        "outDir": "dist"
      }
    },
    {
      "path": "./plugins/helmet.ts",
      "typescript": {
        "outDir": "dist"
      }
    },
    {
      "path": "plugin.ts",
      "options": {
        "hello": "world"
      },
      "typescript": {
        "outDir": "dist"
      }
    }
  ]
}
